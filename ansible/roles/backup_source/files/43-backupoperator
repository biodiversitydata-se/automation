
# Ensure backupoperator can transfer ssh agent when sudoing:
Defaults        env_keep+=SSH_AUTH_SOCK

# Commands performed with sudo by backupoperator at a backup-source:

Cmnd_Alias     BOP_SNAP = /opt/sbdi/backup/bin/prepare_source_snapshot
Cmnd_Alias     BOP_RSYNC = /opt/sbdi/backup/bin/perform_rsync
Cmnd_Alias     BOP_RMSNAP = /opt/sbdi/backup/bin/remove_source_snapshot
Cmnd_Alias     BOP_ALL = BOP_SNAP, BOP_RSYNC, BOP_RMSNAP 

backupoperator ALL=(ALL) NOPASSWD: BOP_ALL

