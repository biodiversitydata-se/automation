Cmnd_Alias     B_MNTL = /opt/sbdi/backup/bin/mount_latest_snapshot.sh
Cmnd_Alias     B_UMNTL = /opt/sbdi/backup/bin/umount_latest_snapshot.sh
Cmnd_Alias     B_ALL = B_SNAP, B_MNTL, B_UMNTL, /usr/bin/rsync

